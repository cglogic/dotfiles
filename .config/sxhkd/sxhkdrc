super + r
	rofi -show run

super + w
	rofi -show window

super + Tab
	bspc node focused -f next.local

super + shift + Tab
	bspc node focused -f prev.local

super + {j,k}
	bspc node @/ -R {90,-90}

super + c
	bspc node focused --close

super + x
	bspc node focused --kill

super + Escape
	bspc quit

super + {s,f}
	bspc desktop -l {tiled,monocle}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + {1-9}
	bspc desktop -f ^{1-9}

super + shift + {1-9}
	id=$(bspc query -N -n); bspc node -d ^{1-9}; bspc node -f ${id}

super + q
	pkill -USR1 -x sxhkd

super + Return
	urxvt -e tcsh

super + l
	i3lock -c 000000 -f

super + grave
	~/.bin/sdmenu

super + backslash
	~/.bin/stmux

super + b
	acpiconf -i 0 | grep Remaining | cut -f 2 -d ' ' | paste -s -d ' ' - | xargs echo "Battery" | dzen2 -p 3

super + g
	~/.bin/schrome

super + v
	~/.bin/smonitor

super + d
	~/.bin/stouchpad

super + p
	printscreen

super + a
	date | dzen2 -p 3

super + e
	uptime | cut -f 1- -d ' ' | paste -s -d ' ' - | dzen2 -p 3

super + i
	xclip -o | cut -f 1- -d ' ' | paste -s -d ' ' - | dzen2 -p 3

super + o
	mixer -s | cut -f 1- -d ' ' | xargs echo "Mixer" | dzen2 -p 3

super + minus
	mixer pcm -5 ; mixer -s pcm | cut -f 1- -d ' ' | xargs echo "Mixer" | dzen2 -p 1

super + equal
	mixer pcm +5 ; mixer -s pcm | cut -f 1- -d ' ' | xargs echo "Mixer" | dzen2 -p 1

super + BackSpace
	mixer pcm 0 ; mixer -s pcm | cut -f 1- -d ' ' | xargs echo "Mixer" | dzen2 -p 1

super + u
	sysctl dev.cpu | grep temperature | cut -f 2 -d ' ' | paste -s -d ' ' - | xargs echo "CPU" | dzen2 -p 3

super + h
	~/.bin/swall

super + t
	flock -x -n /tmp/single-telegram.lock -c "telegram-desktop"

super + m
	urxvt -e cmatrix -C blue

super + z
	~/.bin/crt

super + ,
	xset dpms force off

super + .
	xset dpms force on

super + F10
	xset s on +dpms

super + F11
	xset s off -dpms

super + @F12
	xset dpms force off
