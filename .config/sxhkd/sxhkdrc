super + r
	~/.bin/srofi -show run

super + w
	~/.bin/srofi -show window

super + Tab
	bspc node focused -f next.local

super + shift + Tab
	bspc node focused -f prev.local

super + {j,k}
	bspc node @/ -R {90,-90}

super + c
	bspc node focused --close

super + x
	bspc node focused --kill

super + Escape
	bspc quit

super + {s,f}
	bspc desktop -l {tiled,monocle}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + {1-9}
	bspc desktop -f ^{1-9}

super + shift + {1-9}
	id=$(bspc query -N -n); bspc node -d ^{1-9}; bspc node -f ${id}

super + q
	pkill -USR1 -x sxhkd

super + Return
	urxvt -e tcsh

super + l
	i3lock -c 000000 -f

super + grave
	~/.bin/sdmenu

super + backslash
	~/.bin/stmux

super + b
	acpiconf -i 0 | grep Remaining | xargs -0 notify-send -u low

super + g
	~/.bin/schrome

super + v
	~/.bin/smonitor

super + d
	~/.bin/stouchpad

super + p
	printscreen

super + a
	date | xargs -0 notify-send -u low

super + i
	xclip -o | xargs -0 notify-send -u low

super + o
	mixer | grep Mixer | xargs -0 notify-send -u low

super + minus
	mixer pcm -5 ; mixer pcm | xargs -0 notify-send -u low -t 1000

super + equal
	mixer pcm +5 ; mixer pcm | xargs -0 notify-send -u low -t 1000

super + BackSpace
	mixer pcm 0 ; mixer pcm | xargs -0 notify-send -u low -t 1000

super + u
	sysctl dev.cpu | grep temperature | xargs -0 notify-send -u low

super + h
	~/.bin/swall

super + t
	flock -x -n /tmp/single-telegram.lock -c "telegram-desktop"

super + z
	~/.bin/crt

super + ,
	xset dpms force off

super + .
	xset dpms force on

super + F10
	xset s on +dpms

super + F11
	xset s off -dpms

super + @F12
	xset dpms force off
