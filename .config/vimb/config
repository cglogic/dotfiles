# Homepage that vimb opens if started without a URI.
#set home-page=about:blank
set home-page=https://duckduckgo.com/

# Path to the default download directory. If no download directory is set,
# download will be written into current directory. The following pattern will
# be expanded if the download is started '~/', '~user', '$VAR' and '${VAR}'.
set download-path=~/downloads/
set download-use-external=on
#set download-command=/bin/sh -c "wget -c %s -O $VIMB_FILE --load-cookies $VIMB_COOKIES"
set download-command=/bin/sh -c "aria2c --dir=downloads --user-agent='$VIMB_USER_AGENT' --referer=$VIMB_URI --load-cookies=$VIMB_COOKIES -c '%s'"

# Command with placeholder '%s' called if form field is opened with $EDITOR to
# spawn the editor-like `x-terminal-emulator -e vim %s'. To use Gvim as the
# editor, it's necessary to call it with `-f' to run it in the foreground.
set editor-command=urxvt -e vim %s

# If enabled the inputbox will be hidden whenever it contains no text.
set input-autohide=on

# Enable or disable the spell checking feature.
set spell-checking=off

# Set comma separated list of spell checking languages to be used for
# spell checking.
set spell-checking-languages=en,ru

# The font family to use as the default for content that does not specify a
# font.
set defaultfont=Clear Sans

# The font family used as the default for content using monospace font.
set monofont=Hack

# The font family used as the default for content using sans-serif font.
set sansfont=Clear Sans

# The font family used as the default for content using serif font.
set seriffont=Clear Sans

# The default font size used to display text.
set fontsize=12

# Default font size for the monospace font.
set monofontsize=12

#
set minimumfontsize=10

# Default Full-Content zoom level in percent. Default is 100.
set default-zoom=100

# Shortcuts allow the opening of an URI built up from a named template with
# additional parameters.
shortcut-add duck=https://duckduckgo.com/?q=$0
#shortcut-add d=http://dict.cc/?s=$0
#shortcut-add g=https://encrypted.google.com/search?q=$0
#shortcut-add y=http://www.youtube.com/results?search_query=$0
#shortcut-add s=https://www.startpage.com/do/dsearch?query=$0

# Set the shortcut as the default, that is the shortcut to be used if no
# shortcut is given and the string to open is not an URI.
shortcut-default duck

# Map page zoom in normal mode to keys commonly used across applications
# + (zoom in), - (zoom out), = (zoom reset)
nmap + zI
nmap - zO
nmap = zz

#
#handler-add video=mpv %s

# UI
set hintkeys=asdfglkjh
set stylesheet=on
#set smooth-scrolling=on

# Status bar
set statusbar=false
set status-color-bg=#191919
set status-color-fg=#ffcc66
set status-font=Hack 12
set status-ssl-color-bg=#191919
set status-ssl-color-fg=#99cc99
set status-ssl-font=Hack 12
set status-sslinvalid-color-bg=#191919
set status-sslinvalid-color-fg=#f2777a
set status-sslinvalid-font=Hack 12

# Input bar
set input-bg-normal=#191919
set input-fg-normal=#d3d0c8
set input-font-normal=Hack 12
set input-bg-error=#191919
set input-fg-error=#f2777a
set input-font-error=Hack 12

# Completion
set completion-bg-normal=#d3d0c8
set completion-fg-normal=#191919
set completion-bg-active=#515151
set completion-fg-active=#d3d0c8
set completion-font=Hack 12

# Webkit
#set useragent="Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/59.0.3071.115 Safari/537.36"
set accelerated-compositing=off
set defaultencoding=utf-8
set html5-database=on
set html5-local-storage=on
set images=on
#set webgl=on
set webinspector=off
set xssauditor=on

# SSL
set strict-ssl=false

# JS
set javascript-can-access-clipboard=off
set javascript-can-open-windows-automatically=off

#
set proxy=on
