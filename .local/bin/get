#!/bin/sh

if [ $# -eq 0 ]; then
	echo "Not enough arguments"
	exit 1
fi

for p in "$@"; do
	if [ ! -f "$p" ] && [ ! -d "$p" ]; then
		echo "Wrong file or directory"
		exit 1
	fi

	doas cp -R "$p" "$HOME/"
	if [ $? -ne 0 ]; then exit 1; fi

	f=$(basename "$p")

	doas chown -R $USER:user "$HOME/$f"
	if [ $? -ne 0 ]; then exit 1; fi

	doas chmod -R u+rwX "$HOME/$f"
	if [ $? -ne 0 ]; then exit 1; fi

	doas chmod -R go-rwx "$HOME/$f"
	if [ $? -ne 0 ]; then exit 1; fi
done

exit 0
