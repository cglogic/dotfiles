exec chrome --ignore-gpu-blocklist --use-gl=angle --enable-gpu-rasterization --enable-oop-rasterization --enable-zero-copy --enable-accelerated-video-decode --force-dark-mode --site-per-process --disk-cache-size=0 --disk-cache-dir=/dev/null "$@"
