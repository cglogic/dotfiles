#!/bin/sh

VER=`pkg info chromium | grep Version | awk '{ print $3 }' | awk '{ split($1, a, "_"); print a[1] }'`

# --enable-native-gpu-memory-buffers
exec chrome --ignore-gpu-blocklist --use-gl=egl --enable-gpu-rasterization --enable-zero-copy --force-dark-mode --site-per-process --disk-cache-size=0 --disk-cache-dir=/dev/null --user-agent="Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/$VER Safari/537.36" "$@"
