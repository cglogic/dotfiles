#!/bin/sh

# OPTIONS='--ignore-gpu-blocklist --disable-partial-raster --use-gl=angle --enable-gpu-rasterization --enable-oop-rasterization --enable-zero-copy --num-raster-threads=2 --enable-accelerated-video-decode'

#	--num-raster-threads=2 \

exec chrome \
	--enable-features=VaapiVideoDecoder \
	--ozone-platform-hint=auto \
	--use-gl=egl \
	--ignore-gpu-blocklist \
	--disable-gpu-driver-bug-workarounds \
	--enable-gpu-rasterization \
	--enable-zero-copy \
	--enable-accelerated-video-decode \
	--force-dark-mode \
	--site-per-process \
	--enable-tcp-fastopen \
	--disable-smooth-scrolling \
	--disk-cache-size=0 \
	--disk-cache-dir=/dev/null \
	--disable-features="WebAssembly,AsmJsToWebAssembly,WebAssemblyStreaming,UseChromeOSDirectVideoDecoder" \
	--js-flags="--noexpose-wasm" \
	"$@"
