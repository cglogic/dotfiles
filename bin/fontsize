#!/bin/sh

DPI_W=`xdpyinfo | grep dots | sed 's/x/ /g' | awk '{ print $2 }'`
DPI_H=`xdpyinfo | grep dots | sed 's/x/ /g' | awk '{ print $3 }'`

DPI=$(( ( $DPI_W + $DPI_H ) / 2))

if [ $DPI -ge 150 ]; then
	if (xrandr | grep "*" | grep "1080" > /dev/null); then
		echo '9'
	fi

	if (xrandr | grep "*" | grep "1200" > /dev/null); then
		echo '8'
	fi
fi

if [ $DPI -le 100 ]; then
	echo '12'
fi
