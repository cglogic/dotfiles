#!/bin/sh

SYNAPT=`sysctl hw.psm.synaptics_support | awk '{ print $2 }'`

if [ $SYNAPT == 1 ]; then
	TPID=`xinput list | grep 'â†³ Mouse' | gsed 's/.*id\=\([0-9]\+\).*/\1/g'`
	STATUS=`xinput list-props $TPID | grep 'Device Enabled' | gsed -e 's/.*\:[ \t]\+//g'`

	if [ $STATUS == 0 ]; then
		xinput enable $TPID
	else
		xinput disable $TPID
	fi
fi
